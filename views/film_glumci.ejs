<!DOCTYPE html>
<html lang="hr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= mediaType === 'movie' ? 'Glumci i ekipa filma' : 'Glumci i ekipa serije' %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/film_glumci.css">
</head>
<body>
    <header>
        <nav>
            <div class="header-left">
                <ul class="header-left-list">
                    <li>
                        <a href="/" class="logo">
                            <img src="/images/MBlogo.png" width="30" height="30" alt="Logo" class="logo-img">
                            <h4>MovieBase</h4>
                        </a>
                    </li>
                    <li><a href="/pretrazi?category=movie">Movies</a></li>
                    <li><a href="/pretrazi?category=tv">TV Shows</a></li>
                    <li><a href="/pretrazi?category=person">People</a></li>
                    <li><a href="#">More</a></li>
                </ul>
            </div>

            <div class="header-right">
                <ul class="header-right-list">
                    <li><a href="/" class="logo">Login</a></li>
                    <li>
                        <a href="/pretrazi?category=movie">
                            <i class="fas fa-search"></i>Search
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div>
        <h1>
            <%= filmTitle || 'Title unavailable' %> (<%= releaseYear || 'N/A' %>)
        </h1>
        <a href="<%= mediaType === 'movie' ? `/film/${mediaId}` : `/serija/${mediaId}` %>" class="back-to-main">
            <span style="color: white; padding-right: 5px;">â—€</span> Back to main
        </a>
    </div>
    
    <section class="film-cast">
        <h2><%= mediaType === 'movie' ? 'Cast' : 'Series Cast' %></h2>
        <div class="cast-grid">
            <% if (cast.length === 0) { %>
                <p>No cast members found.</p>
            <% } else { %>
                <% cast.forEach(actor => { %>
                    <div class="cast-card">
                        <a href="/osoba/<%= actor.id %>">
                            <img src="<%= actor.profile_path ? `https://image.tmdb.org/t/p/w200${actor.profile_path}` : '/images/placeholderPerson.jpg' %>" alt="<%= actor.name %>">
                        </a>
                        <p><strong><%= actor.name %></strong> as <%= actor.character %></p>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </section>
    
    <section class="film-crew">
        <h2><%= mediaType === 'movie' ? 'Crew' : 'Series Crew' %></h2>
        <% if (Object.keys(crewByDepartment).length === 0) { %>
            <p>No crew members found.</p>
        <% } else { %>
            <% Object.keys(crewByDepartment).forEach(department => { %>
                <h3><%= department %></h3>
                <div class="crew-grid">
                    <% crewByDepartment[department].forEach(member => { %>
                        <div class="crew-card">
                            <a href="/osoba/<%= member.id %>">
                                <img src="<%= member.profile_path ? `https://image.tmdb.org/t/p/w200${member.profile_path}` : '/images/placeholderPerson.jpg' %>" alt="<%= member.name %>">
                            </a>
                            <p><strong><%= member.name %></strong> - <%= member.job %></p>
                        </div>
                    <% }) %>
                </div>
            <% }) %>
        <% } %>
    </section>
    
    
    <footer>
        <div class="footer-content">
            <div class="footer-left">
                <h2>Moviebase</h2>
                <p>Your trusted source for entertainment.</p>
            </div>
            <div class="footer-middle">
                <ul>
                    <li><a href="/about">About Us</a></li>
                    <li><a href="/contact">Contact</a></li>
                    <li><a href="/terms">Terms of Service</a></li>
                    <li><a href="/privacy">Privacy Policy</a></li>
                </ul>
            </div>
            <div class="footer-right">
                <p>&copy; 2024 Moviebase. All rights reserved.</p>
                <p>Follow us:</p>
                <div class="social-icons">
                    <a href="#"><i class="fab fa-facebook-f"></i></a>
                    <a href="#"><i class="fab fa-twitter"></i></a>
                    <a href="#"><i class="fab fa-instagram"></i></a>
                </div>
            </div>
        </div>
    </footer>
    
</body>
</html>
