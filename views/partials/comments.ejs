<head>
    <link rel="stylesheet" href="/css/komentari.css">
</head>
<section class="comments-section">
    <h2>Reviews</h2>
    
    <% if (komentari.length > 0) { %>
        <div class="comments-grid">
            <% komentari.forEach(komentar => { %>
                <div class="comment-card">
                    <div class="flex-spaceBetween">
                        <p><strong><%= komentar.nadimak ? komentar.nadimak : 'Guest' %>:</strong></p>
                        <p class="date"><%= new Date(komentar.datum).toLocaleDateString() %></p>
                    </div>
                    <!-- 
                    <div class="tockice">
                        <div class="tockice-score">
                            <span class="rating"><%= komentar.ocjena %></span>
                        </div>
                    </div>
                    -->
                    <p><%= komentar.tekst %></p>
                    <div class="card-rating">
                        <span class="rating">Rating: <%= komentar.ocjena %></span>
                    </div>
                </div>
            <% }) %>
        </div>
        <% if (komentari.length === 3) { %>
            <% let url = (typeof filmId !== 'undefined' && filmId !== null) ? `/svi-komentari/film/${filmId}` : `/svi-komentari/serija/${serijaId}`; %>
            <button onclick="window.location.href='<%= url %>'">Read All Reviews</button>
        <% } %>
    <% } else { %>
        <p>No reviews yet. Be the first to add one!</p>
    <% } %>
    <% if (session.username) { %>
        <form action="/dodaj-komentar" method="POST" class="add-comment-form">
            <textarea name="tekst" placeholder="Add your review here..." required></textarea>
            <input type="number" name="ocjena" placeholder="Rating (1-10)" min="1" max="10" required>
            <% if (typeof filmId !== 'undefined' && filmId !== null) { %>
                <input type="hidden" name="filmId" value="<%= filmId %>">
                <input type="hidden" name="tip" value="film">
            <% } else if (typeof serijaId !== 'undefined' && serijaId !== null) { %>
                <input type="hidden" name="serijaId" value="<%= serijaId %>">
                <input type="hidden" name="tip" value="serija">
            <% } %>
            <button type="submit">Submit Review</button>
        </form>
    <% } else { %>
        <p><a href="/login">Login</a> to add a review.</p>
    <% } %>
</section>
